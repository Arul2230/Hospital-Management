<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 5.3//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-5.3.dtd">
<hibernate-configuration>
    <session-factory>
     <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
<property name="connection.url">jdbc:mysql://localhost:3306/EMR</property>
<property name="connection.user">root</property>
<property name="connection.password">1234</property>
<!-- Related to the connection END -->

<!-- Related to hibernate properties START -->
<property name="show_sql">true </property>
<property name="dialet">org.hibernate.dialect.MySQLDialect</property>
<property name="hbm2ddl.auto">update</property>
    <mapping resource="user.hbm.xml"/>
    <mapping resource="prescription.hbm.xml"/>
    <mapping resource="dosage.hbm.xml"/>
    <mapping resource="item.hbm.xml"/>
    <mapping resource="prescriptionDetails.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
